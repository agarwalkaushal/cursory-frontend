{
	"name": "Cursory",
	"version": "1.0",
	"description": "Crisp highlights & summary of any article!",
	"permissions": [
		"activeTab",
		"tabs",
		"https://cursory-nlp.herokuapp.com/*",
		"*://*/*",
		"<all_urls>"
	],
	"browser_action": {
		"default_popup": "popup.html",
		"default_icon": {
					"16": "images/icon16.png",
					"32": "images/icon32.png",
					"48": "images/icon48.png",
					"128": "images/icon128.png"
		}
	},
	"background": {
		"scripts": ["background.js"]
	},
	"icons": {
		"16": "images/icon16.png",
		"32": "images/icon32.png",
		"48": "images/icon48.png",
		"128": "images/icon128.png"
	},
	"manifest_version": 2
}
